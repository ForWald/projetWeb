{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Modification de profil</h1>
        {% for message in app.flashes('success') %}
			<div class="alert alert-dismissible alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}
        {% for message in app.flashes('warning') %}
			<div class="alert alert-dismissible alert-danger mt-4">
				{{ message }}
			</div>
		{% endfor %}
		{{ form(form) }}
        <a href="{{ path('editMdp', {'id': app.user.id}) }}">Modifier le mot de passe</a>
	</div>
{% endblock %}
